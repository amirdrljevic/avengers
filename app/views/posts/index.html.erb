<% if user_signed_in? %>
  <h1>Posts</h1>

  <div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @posts %>
    </div>
    <%= will_paginate @posts, :container => true %>
  </div>
  <div class="row mb-2">
    <% @posts.each do |post| %>
    <div class="col-md-6">
      <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
        <div class="col p-4 d-flex flex-column position-static">
          <h3 class="mb-0"><%= link_to post.title, post, class: "no_style_link" %></h3>
          <div class="mb-1 text-muted"><%= post.created_at.strftime("%_d. %B %Y.") %></div>
          <p class="card-text mb-auto">Author: <%= post.user.first_name + ' ' + post.user.last_name %></p>
          <p><small><i>Comments number</small></i></p>
          <% if post.user == current_user %>
            <div class="d-flex flex-row bd-highlight">
              <div class="p-2 bd-highlight"><%= link_to 'Edit', edit_post_path(post), class: "btn btn-secondary" %> </div>
              <div class="p-2 bd-highlight"><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-secondary" %></div>
            </div>
          <% end %>
        </div>
      </div>
    </div>    
    <% end %>    
  </div>
  <br>
  <%= link_to 'New Post', new_post_path %>
<% else %>
  <div class="card text-center">
    <div class="card-header">
      <h1>Avengers App</h1>
    </div>
    <div class="card-body">
      <p class="card-text">This is a simple app made in Ruby on Rails with Bootstrap.</p>
      You don't have account? <%= link_to 'Sign up', new_user_registration_path %>
      <p> If you already have account here, then simply <%= link_to 'Log in', new_user_session_path %></p>
    </div>
    <div class="card-footer text-muted">
      <%= link_to 'Amir Drljevic', 'https://www.linkedin.com/in/amirdrljevic', target: :blank %>
    </div>
  </div>
<% end %>